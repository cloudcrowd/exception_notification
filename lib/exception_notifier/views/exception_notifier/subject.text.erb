<%= @options[:email_prefix] %>
<% if @options[:email_subject] %>
<%= @options[:email_subject] %>
<% end %>
<% if @kontroller and !(@kontroller.is_a?(ExceptionNotifier::Notifier::MissingController)) %>
<%= @kontroller.controller_name%>#<%= @kontroller.action_name %>
<% end %>
<% if @exception %>
(<%= @exception.class %>) <%= raw @exception.message.to_s %>
<% end %>
